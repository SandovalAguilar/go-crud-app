{{define "add_employee"}}
{{ template "index" . }}
<div class="container mt-4">
    <h1 class="text-center mb-4">Agregar Empleado</h1>
    <form action="/employees/add" method="POST" class="mx-auto" style="max-width: 500px;">
        <div class="mb-3">
            <label for="employee_name" class="form-label">Nombre del empleado</label>
            <input type="text" class="form-control" id="employee_name" name="employee_name" required>
        </div>
        <div class="mb-3">
            <label for="department_name" class="form-label">Departamento</label>
            <select class="form-select" id="department_name" name="department_name" required>
                <option value="">Seleccione un departamento</option>
                {{range .Departments}}
                <option value="{{.DepartmentName}}">{{.DepartmentName}}</option>
                {{end}}
            </select>
            <div class="form-text">Si el departamento no aparece en la lista, <a href="/departments/add" target="_blank">créelo aquí</a>.</div>
        </div>
        <button type="submit" class="btn btn-success">Agregar</button>
        <a href="/employees" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
{{end}}
