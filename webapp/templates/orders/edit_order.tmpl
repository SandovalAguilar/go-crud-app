{{define "edit_order"}}
{{ template "index" . }}
<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Pedido</h1>

    {{if eq .Status "Recibido"}}
    <div class="alert alert-warning" role="alert">
        <strong>Atención:</strong> Este pedido ya fue recibido y no puede ser editado.
    </div>
    {{end}}

    <form method="POST" action="/orders/edit" class="mx-auto" style="max-width: 500px;">
        <input type="hidden" name="id" value="{{.ID}}">

        <div class="mb-3">
            <label for="material_name" class="form-label">Nombre del material</label>
            <input type="text" class="form-control" id="material_name" name="material_name" value="{{.MaterialName}}" {{if eq .Status "Recibido"}}disabled{{else}}required{{end}}>
        </div>

        <div class="mb-3">
            <label for="supplier_name" class="form-label">Proveedor</label>
            <input type="text" class="form-control" id="supplier_name" name="supplier_name" value="{{.SupplierName}}" {{if eq .Status "Recibido"}}disabled{{end}}>
        </div>

        <div class="mb-3">
            <label for="material_description" class="form-label">Descripción del material</label>
            <input type="text" class="form-control" id="material_description" name="material_description" value="{{if .MaterialDescription}}{{.MaterialDescription}}{{end}}" {{if eq .Status "Recibido"}}disabled{{end}}>
        </div>

        <div class="mb-3">
            <label for="material_quantity" class="form-label">Cantidad del material</label>
            <input type="number" class="form-control" id="material_quantity" name="material_quantity" value="{{.MaterialQuantity}}" {{if eq .Status "Recibido"}}disabled{{else}}required min="1"{{end}}>
        </div>

        <div class="mb-3">
            <label for="status" class="form-label">Estado</label>
            <select class="form-select" id="status" name="status" {{if eq .Status "Recibido"}}disabled{{else}}required{{end}}>
                <option value="Pendiente" {{if eq .Status "Pendiente"}}selected{{end}}>Pendiente</option>
                <option value="Recibido" {{if eq .Status "Recibido"}}selected{{end}}>Recibido</option>
            </select>
        </div>

        <div class="mb-3">
            <label for="request_date" class="form-label">Fecha de pedido</label>
            <input type="date" class="form-control" id="request_date" name="request_date" value="{{formatDate .RequestDate}}" {{if eq .Status "Recibido"}}disabled{{else}}required{{end}}>
        </div>

        <div class="mb-3">
            <label for="delivery_date" class="form-label">
                Fecha de entrega
                <span id="required-indicator" style="color: red; display: none;">*</span>
            </label>
            <input type="date" class="form-control" id="delivery_date" name="delivery_date" value="{{formatDate .DeliveryDate}}" {{if eq .Status "Recibido"}}disabled{{end}}>
            <small id="delivery-date-help" class="form-text text-muted" style="display: none;">
                La fecha de entrega es obligatoria para pedidos recibidos
            </small>
        </div>

        <div class="mb-3">
            <label for="note" class="form-label">Nota</label>
            <textarea class="form-control" id="note" name="note" rows="3" {{if eq .Status "Recibido"}}disabled{{end}}>{{if .Note}}{{.Note}}{{end}}</textarea>
        </div>

        {{if eq .Status "Recibido"}}
            <div class="alert alert-info">
                <strong>ℹ️ Información:</strong> Este pedido ya fue recibido. Los campos están bloqueados para evitar cambios accidentales.
            </div>
            <a href="/orders" class="btn btn-secondary">Volver</a>
        {{else}}
            <button type="submit" class="btn btn-success">Guardar Cambios</button>
            <a href="/orders" class="btn btn-secondary">Cancelar</a>
        {{end}}
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const statusSelect = document.getElementById('status');
    const deliveryDateInput = document.getElementById('delivery_date');
    const requiredIndicator = document.getElementById('required-indicator');
    const helpText = document.getElementById('delivery-date-help');

    function updateDeliveryDateRequirement() {
        if (statusSelect && statusSelect.value === 'Recibido') {
            deliveryDateInput.setAttribute('required', 'required');
            requiredIndicator.style.display = 'inline';
            helpText.style.display = 'block';
        } else if (statusSelect) {
            deliveryDateInput.removeAttribute('required');
            requiredIndicator.style.display = 'none';
            helpText.style.display = 'none';
        }
    }

    // Check on page load
    updateDeliveryDateRequirement();

    // Check when status changes
    if (statusSelect) {
        statusSelect.addEventListener('change', updateDeliveryDateRequirement);
    }
});
</script>
{{end}}
