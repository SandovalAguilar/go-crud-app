{{define "orders"}}
{{ template "index" . }}
<div class="container mt-4">
    <h1 class="text-center mb-4">Solicitudes a Administración</h1>
    <!-- Error Alert -->
    {{if .Error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> {{.Error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{end}}
    <!-- Success Alert -->
    {{if .Success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{.Success}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{end}}
    <!-- Add Order Button -->
    <a href="/orders/add" class="btn btn-success mb-3">Agregar Solicitud</a>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover mx-auto">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>ID</th>
                    <th>Nombre del Material</th>
                    <th>Proveedor</th>
                    <th>Descripción del Material</th>
                    <th>Cantidad del Material</th>
                    <th>Estado</th>
                    <th>Fecha de Pedido</th>
                    <th>Fecha de Entrega</th>
                    <th>Nota</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                {{range .Items}}
                <tr>
                    <td>{{.ID}}</td>
                    <td>{{.MaterialName}}</td>
                    <td>{{.SupplierName}}</td>
                    <td>{{if .MaterialDescription}}{{.MaterialDescription}}{{end}}</td>
                    <td>{{.MaterialQuantity}}</td>
                    <td>{{.Status}}</td>
                    <td>{{.RequestDate.Format "2006-01-02"}}</td>
                    <td>{{if .DeliveryDate}}{{.DeliveryDate.Format "2006-01-02"}}{{end}}</td>
                    <td>{{if .Note}}{{.Note}}{{end}}</td>
                    <td>
                        <!-- Edit Button -->
                        <a href="/orders/edit?id={{.ID}}" class="btn btn-warning btn-sm">Editar</a>
                        <!-- Delete Button -->
                        <a href="/orders/delete?id={{.ID}}&material_name={{.MaterialName}}&supplier_name={{.SupplierName}}"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('¿Está seguro de que desea eliminar esta solicitud?');">Eliminar</a>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>
{{end}}
