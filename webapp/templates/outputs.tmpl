{{define "outputs"}}
{{ template "index" . }}

<div class="container mt-4">
    <h1 class="text-center mb-4">{{.Title}}</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover mx-auto">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>ID</th>
                    <th>Nombre del Material</th>
                    <th>Departamento</th>
                    <th>Cantidad</th>
                    <th>Descripci√≥n</th>
                    <th>Fecha</th>
                    <th>Entregado</th>
                    <th>Empleado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                {{range .Outputs}}
                <tr>
                    <td>{{.ID}}</td>
                    <td>{{.MaterialName}}</td>
                    <td>{{.DepartmentName}}</td>
                    <td>{{.Quantity}}</td>
                    <td>{{if .Description}}{{.Description}}{{else}}N/A{{end}}</td>
                    <td>{{.Date}}</td>
                    <td>{{.Delivered}}</td>
                    <td>{{.EmployeeName}}</td>
                    <td>
                        <a href="/outputs/edit?id={{.ID}}" class="btn btn-warning btn-sm">Editar</a>
                        <a href="/outputs/delete?id={{.ID}}&material_name={{.MaterialName}}" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>

    <a href="/outputs/add" class="btn btn-success mb-3">Agregar Salida</a>
</div>

{{end}}
