{{define "add_pending"}}
{{ template "index" . }}

<div class="container mt-4">
    <h1 class="text-center mb-4">Agregar Material Pendiente</h1>

    <form action="/pendings/add" method="POST" class="mx-auto" style="max-width: 500px;">
        <!-- Material Name (Required) -->
        <div class="mb-3">
            <label for="material_name" class="form-label">Nombre del Material</label>
            <input type="text" class="form-control" id="material_name" name="material_name" required>
        </div>

        <!-- Employee Name (Required) -->
        <div class="mb-3">
            <label for="employee_name" class="form-label">Nombre del Empleado</label>
            <input type="text" class="form-control" id="employee_name" name="employee_name" required>
        </div>

        <!-- Department Name (Required) -->
        <div class="mb-3">
            <label for="department_name" class="form-label">Nombre del Departamento</label>
            <input type="text" class="form-control" id="department_name" name="department_name" required>
        </div>

        <!-- Date (Required) -->
        <div class="mb-3">
            <label for="date" class="form-label">Fecha</label>
            <input type="date" class="form-control" id="date" name="date" required>
        </div>

        <!-- Submit and Cancel buttons -->
        <button type="submit" class="btn btn-success">Agregar</button>
        <a href="/pendings" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

{{end}}
