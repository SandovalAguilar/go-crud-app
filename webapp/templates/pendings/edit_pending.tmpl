{{define "edit_pending"}}
{{ template "index" . }}
<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Material Pendiente</h1>
    <form action="/pendings/edit" method="POST" class="mx-auto" style="max-width: 500px;">
        <!-- Hidden ID to identify the material being edited -->
        <input type="hidden" name="id" value="{{.Pending.ID}}">

        <!-- Material Name (Required) -->
        <div class="mb-3">
            <label for="material_name" class="form-label">Nombre del Material</label>
            <input type="text" class="form-control" id="material_name" name="material_name" value="{{.Pending.MaterialName}}" required>
        </div>

        <!-- Employee Name (Required) - Dropdown -->
        <div class="mb-3">
            <label for="employee_name" class="form-label">Nombre del Empleado</label>
            <select class="form-select" id="employee_name" name="employee_name" required>
                <option value="">Seleccione un empleado</option>
                {{range .Employees}}
                <option value="{{.EmployeeName}}" {{if eq $.Pending.EmployeeName .EmployeeName}}selected{{end}}>{{.EmployeeName}}</option>
                {{end}}
            </select>
            <div class="form-text">Si el empleado no aparece, <a href="/employees/add" target="_blank">créelo aquí</a>.</div>
        </div>

        <!-- Department Name (Required) - Dropdown -->
        <div class="mb-3">
            <label for="department_name" class="form-label">Nombre del Departamento</label>
            <select class="form-select" id="department_name" name="department_name" required>
                <option value="">Seleccione un departamento</option>
                {{range .Departments}}
                <option value="{{.DepartmentName}}" {{if eq $.Pending.DepartmentName .DepartmentName}}selected{{end}}>{{.DepartmentName}}</option>
                {{end}}
            </select>
            <div class="form-text">Si el departamento no aparece, <a href="/departments/add" target="_blank">créelo aquí</a>.</div>
        </div>

        <!-- Date (Required) -->
        <div class="mb-3">
            <label for="date" class="form-label">Fecha</label>
            <input type="date" class="form-control" id="date" name="date" value="{{.Pending.Date}}" required>
        </div>

        <!-- Submit and Cancel buttons -->
        <button type="submit" class="btn btn-success">Guardar Cambios</button>
        <a href="/pendings" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
{{end}}
