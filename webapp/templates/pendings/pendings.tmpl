{{define "pendings"}}
{{ template "index" . }}
<div class="container mt-4">
    <h1 class="text-center mb-4">{{.Title}}</h1>
    <!-- Error Alert -->
    {{if .Error}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error:</strong> {{.Error}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{end}}
    <!-- Success Alert -->
    {{if .Success}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        {{.Success}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{end}}
    <!-- Create Pending Button -->
    <a href="/pendings/add" class="btn btn-success mb-3">Agregar Pendiente</a>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover mx-auto">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>ID</th>
                    <th>Nombre del Material</th>
                    <th>Departamento</th>
                    <th>Cantidad</th>
                    <th>Descripción</th>
                    <th>Fecha</th>
                    <th>Requisicion</th>
                    <th>Empleado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody class="text-center">
                {{range .Outputs}}
                <tr>
                    <td>{{.ID}}</td>
                    <td>{{.MaterialName}}</td>
                    <td>{{.DepartmentName}}</td>
                    <td>{{.Quantity}}</td>
                    <td>{{if .Description}}{{.Description}}{{end}}</td>
                    <td>{{.Date.Format "2006-01-02"}}</td>
                    <td>{{.Requisition}}</td>
                    <td>{{.EmployeeName}}</td>
                    <td>
                        <!-- Edit Button -->
                        <a href="/pendings/edit?id={{.ID}}" class="btn btn-warning btn-sm">Editar</a>
                        <!-- Delete Button -->
                        <a href="/pendings/delete?id={{.ID}}&material_name={{.MaterialName}}"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('¿Está seguro de que desea eliminar este pendiente?');">Eliminar</a>
                    </td>
                </tr>
                {{end}}
            </tbody>
        </table>
    </div>
</div>
{{end}}
